@model ICollection<BookModel>
<div class="row">
    <h4 class="mb-3 ml-5">Today's Special:</h4>
</div>
<p>
    <a asp-action="AddBook">Add Book</a>
</p>
<table class="table table-bordered">  
<tr>  
    <th>Author </th>  
    <th>Title </th>  
    <th>Isbn </th> 
    <th>Book Info</th>
  
    
    
</tr>  
@foreach (var book in Model)
{
    <tr>
        <td>@book.Author</td>
        <td>@book.Title</td>
        <td>@book.Isbn</td>
        <td><a asp-action="BookDetail" asp-route-bookIsbn="@book.Isbn">Book Details</a>
       
        </td>
    </tr>
   
}
</table>


<p>
    <a asp-action="DeleteBook">Delete Book</a>
</p>



       